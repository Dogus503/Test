<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="92dp"
        android:text="Вопрос 3. Как в android studio создать Toast в классе Main_Activity(маленькой скорости). В ответе укажите только как создать Toast без текста"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textViewColorLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="makeText.show(Toast, MainActivity.this, ' ', Toast.LENGTH_SHORT)"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewColorSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkBoxColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="2dp">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textViewBoldLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="makeText(MainActivity.this, ' ', Toast.LENGTH_SHORT).Toast.show()"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewBoldSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="2dp">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <CheckBox
                android:id="@+id/checkBox1Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewBoldLarge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toast.makeText(MainActivity.this, ' ', Toast.LENGTH_SHORT).show()"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewBoldSmall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="2dp">

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox2Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ответить"
        app:backgroundTint="#423838" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:text="Вопрос 4. Вызовите статический метод run класса Runner"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCounter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ответить"
        app:backgroundTint="#070707" />
</LinearLayout>
